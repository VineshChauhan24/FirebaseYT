<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.elite.firebaseyt">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:hardwareAccelerated="false"
        android:largeHeap="true"
        android:theme="@style/AppTheme2"
        android:usesCleartextTraffic="true">
        <activity android:name=".PlayList.PlaylistActivity"></activity>
        <activity
            android:name=".Download.DownloadActivity"
            android:label="Your Downloades" />
        <activity
            android:name=".FavoriteActivity"
            android:label="Favorite" />
        <activity android:name=".MainActivity" />
        <activity
            android:name=".YouTubePlay"
            android:label="PlayTube" />
        <activity android:name=".UpdateActivity" />
        <activity android:name=".DetailList" />
        <activity
            android:name=".Main.BottomActivity"
            android:theme="@style/AppTheme2">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>